<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>com.axyus.agendawebapp.controller.HomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomersServlet</servlet-name>
        <servlet-class>com.axyus.agendawebapp.controller.CustomersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddressesServlet</servlet-name>
        <servlet-class>com.axyus.agendawebapp.controller.AddressesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageAgendaServlet</servlet-name>
        <servlet-class>com.axyus.agendawebapp.controller.ManageAgendaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateCustomerServlet</servlet-name>
        <servlet-class>com.axyus.agendawebapp.controller.UpdateCustomerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateAddressServlet</servlet-name>
        <servlet-class>com.axyus.agendawebapp.controller.UpdateAddressServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateCustomerServlet</servlet-name>
        <servlet-class>com.axyus.agendawebapp.controller.CreateCustomerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateAddressServlet</servlet-name>
        <servlet-class>com.axyus.agendawebapp.controller.CreateAddressServlet</servlet-class>
    </servlet>
        <servlet>
        <servlet-name>AllDataServlet</servlet-name>
        <servlet-class>com.axyus.agendawebapp.controller.AllDataServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomersServlet</servlet-name>
        <url-pattern>/all-customers/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddressesServlet</servlet-name>
        <url-pattern>/all-addresses/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageAgendaServlet</servlet-name>
        <url-pattern>/manage-agenda</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateCustomerServlet</servlet-name>
        <url-pattern>/update-customer/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateAddressServlet</servlet-name>
        <url-pattern>/update-address/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateCustomerServlet</servlet-name>
        <url-pattern>/create-customer/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateAddressServlet</servlet-name>
        <url-pattern>/create-address/*</url-pattern>
    </servlet-mapping>
        <servlet-mapping>
        <servlet-name>AllDataServlet</servlet-name>
        <url-pattern>/all-data/*</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
